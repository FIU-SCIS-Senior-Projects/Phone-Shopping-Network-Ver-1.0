<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:util="http://www.springframework.org/schema/util" xmlns:jee="http://www.springframework.org/schema/jee"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-3.2.xsd
        http://www.springframework.org/schema/util
        http://www.springframework.org/schema/util/spring-util-3.2.xsd http://www.springframework.org/schema/jee http://www.springframework.org/schema/jee/spring-jee.xsd">

    <context:annotation-config />

    <bean id="userProfileDAO" class="com.socialmobile.phoneshopping.service.dao.DummyuserProfileDAO"/>

    <bean id="userProfileService" class="com.socialmobile.phoneshopping.service.impl.UserProfileManager">
        <property name="userProfileDAO" ref="userProfileDAO"/>
    </bean>

    <bean class="org.springframework.beans.factory.annotation.AutowiredAnnotationBeanPostProcessor"/>

    <!--<bean id="userProfileServiceResource"  class="com.socialmobile.phoneshopping.service.resources.UserProfileServiceResource">-->
        <!--<property name="userProfileService" ref="userProfileService"/>-->
    <!--</bean>-->

    <jee:jndi-lookup id="dataSource" jndi-name="java:comp/env/jdbc/PhoneShoppingDS"/>

    <bean id="sessionFactory" class="org.springframework.orm.hibernate5.LocalSessionFactoryBean">
        <property name="dataSource" ref="dataSource"/>
        <property name="annotatedClasses">
            <list>
                <value>com.socialmobile.phoneshopping.service.api.domain.User</value>
            </list>
        </property>
        <property name="hibernateProperties">
            <props>
                <prop key="hibernate.dialect">org.hibernate.dialect.MySQL5InnoDBDialect</prop>
                <prop key="hibernate.show_sql">false</prop>
                <prop key="cache.use_query_cache">true</prop>
            </props>
        </property>
    </bean>

</beans>